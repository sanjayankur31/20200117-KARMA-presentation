@article{Fyhn.413,
	author = "Fyhn, Marianne and Hafting, Torkel and Witter, Menno P. and Moser, Edvard I. and Moser, May-Britt",
	title = "Grid cells in mice",
	ISSN = "1098-1063",
	DOI = "10.1002/hipo.20472",
	volume = "18",
