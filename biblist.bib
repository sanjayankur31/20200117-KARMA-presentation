@article{Guzowski.318,
	author = "Guzowski, John F. and Knierim, James J. and Moser, Edvard I.",
	title = "Ensemble Dynamics of Hippocampal Regions \{CA3\} and \{CA1\}",
	ISSN = "0896-6273",
	DOI = "http://dx.doi.org/10.1016/j.neuron.2004.11.003",
	volume = "44",
